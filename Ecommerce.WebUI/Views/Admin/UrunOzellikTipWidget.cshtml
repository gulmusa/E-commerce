@model IEnumerable<Ecommerce.WebUI.Models.OzellikTip>

<script src="~/Content/AdminTemplate/js/jquery-1.8.3.min.js"></script>
<script>
    $("#tipler").change(function myFunction(){

        var id = $(this).val();

        $.ajax({ 
            type:"GET",
            url: "/Admin/UrunOzellikDegerWidget",
            data: { tipId: id },
            success: function myFunction(veri) {
                $("#deger").html('');
                $("#deger").html(veri);
            },
            error: function myfunction() {
                alert("error");
            } 
        })
    })
</script>

<div class="form-group">
    <label class="col-lg-2 control-label">Özellik Tip:</label>
    <div class="col-lg-10">
        <select class="form-control m-bot15" id="tipler" name="OzellikTipID">
            @foreach (var tip in Model)
            {
                <option value="@tip.Id">@tip.Adi</option>
            }
        </select> 
    </div>
</div> 
