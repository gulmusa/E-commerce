
@{
    ViewBag.Title = "OzellikDegerleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Ecommerce.WebUI.Models.OzellikDeger>

<section class="panel">
    <header class="panel-heading">
        Özellik Değerleri
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/OzellikDegerEkle" class="btn btn-success"> Yeni Özellik Değeri<i class="icon-plus"></i></a>
                </div>
            </div>
            <br /> 
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Özellik Değer Adı</th>
                        <th>Açıklama</th>
                        <th>Özellk Tipi</th>
                        <th>Güncelle</th>
                        <th>Sil</th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var deger in Model)
                    {
                        <tr class="">
                            <td>@deger.Adi</td>
                            <td>@deger.Aciklama</td>
                            @if (deger.OzellikTip != null)
                            {
                                <td>@deger.OzellikTip.Adi</td>
                            }
                            <td><a href="/Admin/OzellikDegerGuncelle/@deger.Id" class="edit"><i class="icon-pencil"></i></a></td>
                            <td><a href="/Admin/OzellikDegerSil/@deger.Id" class="fancybox"><i class="icon-trash"></i></a></td>
                        </tr>
                    } 
                </tbody>
            </table>
        </div>
    </div>
</section>