
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Ecommerce.WebUI.Models.Marka>

@section head{ 
    <link href="~/Content/AdminTemplate/assets/" rel="stylesheet" /> 
}
<br /><br /><br />
<section class="panel">
    <header class="panel-heading" style="color:crimson;">
        Markaların Listesi
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/MarkaEkle" class="btn btn-success">Yeni Marka<i class="icon-plus"></i></a>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Açıklama</th>
                        <th>Resmi Göster</th>
                        <th>Güncelle</th>
                        <th>Sil</th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var marka in Model)
                    {
                        <tr class="">
                            <td>@marka.Adi</td>
                            <td>@marka.Aciklama</td>
                            <td>
                                @if (marka.Resim != null)
                                {
                                    <a href="@marka.Resim.OrtaYol" rel="group" class="fancybox"><i class="icon-eye-open"></i></a>
                                }
                            </td>
                            <td>
                                <a href="/Admin/MarkaGuncelle/@marka.Id" class="btn btn-xs btn-success"><i class="icon-pencil"></i></a>
                            </td>
                            <td>
                                <a href="/Admin/MarkaSil/@marka.Id" class="btn btn-danger btn-xs icon-trash"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script src="~/Content/AdminTemplate/fancybox/source/jquery.fancybox.js"></script>
<script src="~/Content/AdminTemplate/js/jquery-1.8.3.min.js"></script>
<script type="text/javascript">
    $(function () {
        //    fancybox
        jQuery(".fancybox").fancybox();
    });

</script>