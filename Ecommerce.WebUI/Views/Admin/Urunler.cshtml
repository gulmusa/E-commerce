
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Ecommerce.WebUI.Models.Urun> 
<br /><br /><br />
<section class="panel">
    <header class="panel-heading" style="color:crimson;">
        <h3>Ürünler Listesi</h3> 
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/UrunEkle" class="btn btn-success"> Yeni Ürün<i class="icon-plus"></i></a>
                </div> 
            </div>
            <br /> 
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Alış Fiyat</th>
                        <th>Satış Fiyat</th>
                        <th>Kategori</th>
                        <th>Eklenme Tarihi</th>
                        <th>Marka</th>
                        <th>Son Kullanma Tarihi</th>
                        <th>ResimEkle</th>
                        <th>Güncelle</th>
                        <th>Sil</th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var urun in Model)
                    {
                    <tr class="">
                        <td>@urun.Adi</td>
                        <td><label class="label label-primary">@urun.Aciklama</label></td>
                        <td>@urun.AlisFiyat</td>
                        <td class="center">@urun.SatisFiyat</td>
                        <td><a href="">@urun.Kategori.Adi</a></td>
                        <td><a href="">@urun.EklenmeTarihi</a></td>
                        <td><a href="">@urun.Marka.Adi</a></td>
                        <td><a href="">@urun.SonKullanmaTarihi</a></td>
                        <td><a href="/Admin/UrunResimEkle/@urun.Id" class="btn btn-primary btn-round" style="margin-left:15px;"><i class="icon-plus"></i></a></td>
                        <td><a href="/Admin/UrunGuncelle/@urun.Id" class="btn btn-success btn-xs"><i class="icon-pencil">Düzenle</i></a></td>
                        <td><a href="/Admin/UrunSil/@urun.Id" class="btn btn-danger btn-danger"><i class="icon-trash">Sil</i></a></td> 
                    </tr> 
                    } 
                </tbody>
            </table>
        </div>
    </div>
</section>